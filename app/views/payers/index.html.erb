<h1>Listing payers</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Tax</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @payers.each do |payer| %>
      <tr>
        <td><%= payer.name %></td>
        <td><%= payer.tax_id %></td>
        <td><%= link_to 'Show', payer %></td>
        <td><%= link_to 'Edit', edit_payer_path(payer) %></td>
        <td><%= link_to 'Destroy', payer, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Payer', new_payer_path %>
