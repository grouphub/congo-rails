<h1>Listing benefits</h1>

<table>
  <thead>
    <tr>
      <th>Begin date</th>
      <th>Benefit type</th>
      <th>Coordination of benefits</th>
      <th>Late enrollment</th>
      <th>Maintenance type</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @benefits.each do |benefit| %>
      <tr>
        <td><%= benefit.begin_date %></td>
        <td><%= benefit.benefit_type %></td>
        <td><%= benefit.coordination_of_benefits %></td>
        <td><%= benefit.late_enrollment %></td>
        <td><%= benefit.maintenance_type %></td>
        <td><%= link_to 'Show', benefit %></td>
        <td><%= link_to 'Edit', edit_benefit_path(benefit) %></td>
        <td><%= link_to 'Destroy', benefit, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

