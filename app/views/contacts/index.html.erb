<h1>Listing contacts</h1>

<table>
  <thead>
    <tr>
      <th>Communication number one</th>
      <th>Integer</th>
      <th>Communication type one</th>
      <th>Communication number two</th>
      <th>Communication type</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @contacts.each do |contact| %>
      <tr>
        <td><%= contact.communication_number_one %></td>
        <td><%= contact.integer %></td>
        <td><%= contact.communication_type_one %></td>
        <td><%= contact.communication_number_two %></td>
        <td><%= contact.communication_type %></td>
        <td><%= link_to 'Show', contact %></td>
        <td><%= link_to 'Edit', edit_contact_path(contact) %></td>
        <td><%= link_to 'Destroy', contact, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

